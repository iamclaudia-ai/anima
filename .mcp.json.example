{
  "mcpServers": {
    "claudia-memory": {
      "type": "stdio",
      "command": "node",
      "args": [
        "packages/memory/dist/index.js"
      ],
      "env": {
        "LETTA_TOKEN": "your-letta-token-here",
        "LETTA_BASE_URL": "https://api.letta.com",
        "LETTA_PROJECT": "claudia-anima"
      }
    },
    "claudia-voice": {
      "type": "stdio",
      "command": "node",
      "args": [
        "packages/voice/dist/index.js"
      ]
    },
    "claudia-vision": {
      "type": "stdio",
      "command": "node",
      "args": [
        "packages/vision/dist/index.js"
      ],
      "env": {
        "STABILITY_API_KEY": "your-stability-api-key-here"
      }
    }
  }
}
