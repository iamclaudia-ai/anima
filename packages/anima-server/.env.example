# Anima Server Configuration
# Copy this to .env and update with your values

# Voice (Journal) Configuration
# On Anima Sedes: ~/journal = /Users/claudia/journal
VOICE_GLOBAL_PATH=~/journal
VOICE_PROJECT_PATH=./journal

# Vision (Image Generation) Configuration
# On Anima Sedes: ~/vision = /Users/claudia/vision
VISION_PATH=~/vision
STABILITY_API_KEY=your_stability_api_key_here
STABILITY_MODEL=sd3.5-large-turbo

# Heart (Memory) Configuration
# On Anima Sedes: ~/memory = /Users/claudia/memory
HEART_MEMORY_PATH=~/memory

# Server Configuration
PORT=3000
HOST=0.0.0.0
ANIMA_API_KEY=your_secret_api_key_here

# For testing
ANIMA_SERVER_URL=http://localhost:3000
